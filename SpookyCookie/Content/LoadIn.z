class LoadIn : ZilchComponent
{
    [Property]
    var Hallway : Boolean = false;
    function Initialize(init : CogInitializer)
    {
        var loadScreen = this.Space.FindObjectByName("LoadScreen2");
        var leveltitle = this.Space.LevelSettings.HUDCreator.HUDSpace.LevelSettings.HUDReferences.LevelTitle;
        leveltitle.FadeText.StartFade = true;
        if(this.Hallway)
        {
            var player = this.Space.FindObjectByName("Player");
            player.Transform.Translation = this.GameSession.GameVars.HallwayPos;
        }
        loadScreen.Transform.Translation = Real3(0, 0, 2);
        loadScreen.Fade.Opacity = 1;
        loadScreen.Sprite.Color = Real4(loadScreen.Sprite.Color.XYZ, 1);
        loadScreen.Fade.Invis = false;
        loadScreen.Fade.StartFade = true;
        Console.WriteLine("`loadScreen.Sprite.Color` `loadScreen.Fade.Invis`");
    }
}
